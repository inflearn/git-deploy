# Script to deploy to test branch

usage() {
    err_msg "ì‚¬ìš©ë²•: git-deploy [--dev|--rc]"
    exit 1
}

exit_on_failed() { 
    echo "$@";
    exit 1; 
}

err_msg() { echo "$@" ;} >&2

# long ì˜µì…˜ ì²˜ë¦¬
A=""
is_dev=0
deploy_branch="test"
while true; do
    [ $# -eq 0 ] && break
    case $1 in
        --dev)
            is_dev=1
            shift; continue
            ;;
        --rc)
            deploy_branch="rc"
            shift; continue
            ;;
        --*) 
            err_msg "ì•Œ ìˆ˜ ì—†ëŠ” ì˜µì…˜: $1"
            usage;
            ;;
    esac

    A=$A$([ -n "$A" ] && echo -e "\a")$1
    shift
done

# Delete 'test' branch with -f option

echo "ğŸ—‘ $deploy_branch ë¸Œëœì¹˜ë¥¼ ì‚­ì œí•©ë‹ˆë‹¤."
echo "git branch -D $deploy_branch"
git branch -D $deploy_branch

echo ""

# Checkout current branch or 'dev' if --dev option has been given

git_current_branch=$(git branch --show-current)
if [ $is_dev -eq 1 ]
    then
        echo "ğŸ¦ dev ë¸Œëœì¹˜ë¡œ ì „í™˜í•©ë‹ˆë‹¤."
        echo "git checkout dev"
        git checkout dev || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."
    else
        echo "ğŸ‡ğŸ¾ $git_current_branch ë¸Œëœì¹˜ë¡œ ì „í™˜í•©ë‹ˆë‹¤."
        echo "git checkout $git_current_branch"
        git checkout "$git_current_branch" || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."
fi

echo ""

# Create new branch 'test' and checkout to this

echo "ğŸ†• $deploy_branch ë¸Œëœì¹˜ë¥¼ ìƒì„±í•©ë‹ˆë‹¤."
echo "git checkout -b $deploy_branch"
git checkout -b $deploy_branch || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."

echo ""

# Push local branch onto the remote branch with -f option

echo "ğŸ†™ ë¡œì»¬ $deploy_branch ë¸Œëœì¹˜ë¥¼ ë¦¬ëª¨íŠ¸ë¡œ ê°•ì œ í‘¸ì‹œí•©ë‹ˆë‹¤."
echo "git push -f origin $deploy_branch"
git push -f origin $deploy_branch || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."

echo ""

# Checkout back to initial branch 

echo "ğŸ†— ì‹œì‘ ë¸Œëœì¹˜ë¡œ ëŒì•„ì˜µë‹ˆë‹¤."
echo "git checkout $git_current_branch"
git checkout "$git_current_branch" || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."

echo ""

# Delete 'test' branch

echo "ğŸ†“ $deploy_branch ë¸Œëœì¹˜ë¥¼ ì‚­ì œí•©ë‹ˆë‹¤."
echo "git branch -D $deploy_branch"
git branch -D "$deploy_branch" || exit_on_failed "ì˜¤ë¥˜ê°€ ë°œìƒí–ˆìŠµë‹ˆë‹¤."

